<style>
    body {
        background-image: url('https://upload.wikimedia.org/wikipedia/commons/6/69/Hilton_C._Buley_Library.jpg') !important;
        background-repeat: no-repeat;
        background-size: cover;
    }
    main {
        background: transparent;
    }
    .bg-custom {
        background-color: transparent;
    }
    .btn-info {
        background-color: skyblue;
    }
    a:link {
        color: white;
        text-decoration: none;
    }
    a:visited {
        color: white;
        background: skyblue;
        text-decoration: none;
    }
    a:hover {
        color: white;
        text-decoration: underline;
    }
    
    /* Carousel styling for landing page */
    .carousel-newest {
        background-color: rgba(255, 255, 255, 0.95);
        border-radius: 10px;
        padding: 20px;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.3);
    }
    .carousel-newest .carousel-item {
        min-height: 300px;
        padding: 20px;
    }
    .carousel-newest h3 {
        color: #333;
        font-size: 1.3rem;
        margin-bottom: 15px;
        font-weight: bold;
    }
    .carousel-newest .item-meta {
        color: #666;
        font-size: 0.95rem;
        margin-bottom: 10px;
    }
    .carousel-newest .item-link {
        color: #007bff;
        text-decoration: none;
        font-weight: bold;
    }
    .carousel-newest .item-link:hover {
        text-decoration: underline;
    }
    .carousel-newest .carousel-control-prev-icon,
    .carousel-newest .carousel-control-next-icon {
        background-color: rgba(0, 0, 0, 0.5);
        border-radius: 50%;
        padding: 20px;
    }
</style>
