{%- extends config.kerko.templates.page %}

{% block html_attributes %} lang="en"{% endblock %}
{% block head %}
{{ super() }}
<link rel="stylesheet" href="{{ url_for('static', filename='css/landing.css') }}">
{% endblock %}

{% block content %}
<div class="container-fluid landing-hero py-5">
    <div class="container">
        <div class="row">
            <!-- Left Column: Hero Heading (col-md-8) -->
            <div class="col-12 col-md-8">
                <h1 class="landing-heading">Currently Hosting<br>{{ total_count }} Resources</h1>
                <div class="mt-4">
                    <a class="btn btn-info btn-lg" href="{{ url_for('kerko.search') }}" role="button">Explore Our Database</a>
                </div>
            </div>

            <!-- Right Column: Resource Types (col-md-4) -->
            <div class="col-12 col-md-4">
                <h2 class="landing-heading mb-3">Resource Types</h2>
                <div class="resource-links">
                    <h5><a href="{{ url_for('kerko.search', type='journalArticle', sort='date_desc') }}">Journal Articles</a></h5>
                    <h5><a href="{{ url_for('kerko.search', type='book', sort='date_desc') }}">Books</a></h5>
                    <h5><a href="{{ url_for('kerko.search', type='conferencePaper', sort='date_desc') }}">Conference Papers</a></h5>
                    <h5><a href="{{ url_for('kerko.search', type='bookSection', sort='date_desc') }}">Book Sections</a></h5>
                </div>
            </div>
        </div>
    </div>
</div>

{% endblock %}